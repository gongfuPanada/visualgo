<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
		
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	    <property name="location" value="url.properties"/>
	</bean>	
	
	<bean id="graphFactory" 
	   	  class="com.github.jhilary.visualgo.graph.factory.UndirectedGraphFactory">
	</bean>
	
	<bean id="graphFormater" 
		  class="com.github.jhilary.visualgo.graph.formater.NodeGraphFormater">
	   	<property name="delimiter" value="\t"/>
	   	<property name="graphFactory" ref="graphFactory"/>
	</bean>
		
	<bean id="graphDao" 
	   	class="com.github.jhilary.visualgo.graph.dao.UrlGraphDao">
		<property name="urlResource" value="${data.url}"/>
		<property name="graphFormater" ref="graphFormater"/>
	</bean>
	
</beans>